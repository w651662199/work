.loginBox .loginBar{
    width: 100%;
    z-index: 10;
    background-color: #fff;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    text-align: center;
    height: 80rpx;
    overflow: hidden;
    line-height:80rpx;

}

.loginBox .navbar{
  position: relative;
  font-size: 28rpx;
  color: #999;
  display: block;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.loginBox .selectedNav{
  color: #ff0436;
}
.content{
  padding:0 46rpx;
}
.line{
  width:60rpx;
  position:absolute;
  height:0.5rpx;
  background:#ff0436;
  bottom:1rpx;
  text-align:center;
  display: none;
}
.selectedNav .line{
  left:42%;
  display: block;
}
.section{
  width: 100%;
  border-bottom: 0.5rpx solid #ccc;
  line-height:45rpx;
  margin:50rpx 0 40rpx 0;
  padding:28rpx 0;
  display: flex;
  position: relative
}
.section .title{
 color:#333;
font-size:32rpx;
display:inline-block;
  height:60rpx;
  line-height:60rpx;
  flex: 1;
}
.section .input-min{
  width: 300rpx;
}
.section .input{
  flex: 5;
  height:60rpx;
  line-height:60rpx;
  display:inline-block;
  margin:0 20rpx -20rpx;
  font-size: 32rpx;
  color: #333;
}
.section .code{
  border:.5rpx solid #ff0436;
  font-size:28rpx;
  border-radius:20px;
  color: #ff0436;
  display:inline-block;
  padding: 9rpx 20rpx;
  position: absolute;
  right: 0;
  z-index:1000;
}
.section  .getCode{
  border-color: #9f9f9f;
  color: #9f9f9f;
}
.content .button{
  margin: 46rpx 0; 
  background: #ff1236;
  color: #fff;
}
.content .tip{
  font-size: 26rpx;
  color: #999;
}
.content .tip .text{
  display: inline;
  color: #2f4481;
}
.content .formtip{
  font-size: 26rpx;
  color: #999;
}
.content .placeholder{
  font-size: 32rpx;
  color: #cecece;
}