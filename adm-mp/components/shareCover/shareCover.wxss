.cover-view {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 20;
  background: rgba(0, 0, 0, 0.6);
}
.action-sheet {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 436rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.action-sheet .title {
  font-size: 40rpx;
  color: #E82C2C;
  text-align: center;
}
.action-sheet .desc {
  margin: 10rpx 0 20rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
.action-sheet button {
  width: 100%;
  height: 90rpx;
  border-radius: 90rpx;
  font-size: 32rpx;
}
.action-sheet .btn-share {
  margin: 30rpx 0;
  background: #15CF77;
  color: #fff;
}
.action-sheet .btn-share image {
  width: 51rpx;
  height: 41rpx;
}
.action-sheet .btn-cancel {
  background: #EDEDED;
  color: #333;
}