.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  display: flex;
  padding: 0 10rpx;
  box-sizing: border-box;
  align-items: center;
}
.bottom .bot-item {
  display: flex;
  margin: 0 10rpx;
  height: 90rpx;
  border-radius: 90rpx;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
}
.bottom .bot-item image {
  width: 28rpx;
  height: 34rpx;
  padding-right: 20rpx;
}
.bottom .bot-item.survey {
  width: 250rpx;
  border: 1rpx solid #ddd;
  background: #fff;
  color: #E82C2C;
}
.bottom .bot-item.share {
  position: relative;
  flex-grow: 1;
  background: #E82C2C;
  color: #fff;
}
.bottom .bot-item .sharebtn{
  position:absolute;
  top:0;
  width:100%;
  height:93rpx;
  right: 0;
  opacity: 0;
}