@import "../../../components/rebate/rebate.wxss";
.header_image{
  width:100%;
}
.detailContent {
  padding: 0 22rpx;
} 
.content-title {
  margin: 30rpx 0 0 16rpx;
  font-size: 48rpx;
  color: #333;
}
.topicDetail .tpc-para {
  font-size: 30rpx;
  color: #292929;
  line-height: 52rpx;
  margin-bottom: 28rpx;
  word-wrap: break-word;
}
.topicDetail .tpc-main .tpc-para:first-child {
  border-top: 1px solid #f1f1f1;
  margin: 30rpx 0 0 0;
  padding: 50rpx 0 0 0;
}
.tpc-main .tpc-img-box {
  width: 100%;
  margin: 50rpx 0;
}
.tpc-main .tpc-img-box image {
  width:100%;
}
.tpc-main .item-box {
  margin-top: 20rpx;
}
.tpc-main .item-box .tpc-good-zone{
  background: #f6f6f6;
  padding: 20rpx;
  border: 1px solid #eee;
  margin: 0 40rpx 30rpx;
}
.tpc-main .item-box .tpc-gd-img {
  float: left;
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
}
.tpc-main .item-box .tpc-fig {
  height: 180rpx;
  position: relative;
  overflow: hidden;
}
.tpc-main .item-box .tpc-gd-title {
  display: block;
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 46rpx;
  font-weight: 400;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.tpc-main .item-box .tpc-price {
  position: absolute;
  bottom: 0;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  margin-top: 60rpx;
}
.author-box {
  padding: 60rpx 0 200rpx 0;
  width: 100%;
  text-align: center;
}
.author-box image {
  margin-bottom: 14rpx;
  border-radius: 130rpx;
  width: 130rpx;
  height: 130rpx;
}
.author-box text {
  display: block;
  color: #666;
  font-size: 14px;
}
.goHome{
  position:fixed;
  bottom:180rpx;
  right:20rpx;
  height: 80rpx;
  width: 80rpx;
}
.goHome image{
  width: 100%;
}