/* pages/details/video/video.wxss */
@import "../../../components/rebate/rebate.wxss";
.videoDetail {
    width: 100%;
    background: #f2f2f2;
}
.video_header {
  background: #fff;
  border-bottom: 0.5rpx solid #ddd;
}
.video_header video{
  width: 100%;
  height: 422rpx;
}
.video_header .video_content {
  padding: 0 22rpx;
  padding-bottom: 50rpx;
}
.video_header .video_content .detail-title{
    font-size: 48rpx;
    color: #333;
    margin-top: 30rpx;
}
.video_content .detail-des {
    font-size: 32rpx;
    color: #000;
    line-height: 52rpx;
    padding: 50rpx 0 0 0;
    border-top: 0.5rpx solid #f1f1f1;
    margin: 30rpx 0 0 0;
}
.video_templet_list .video_list {
    margin: 18rpx 0;
    margin-bottom: 0;
    border-top: 0.5rpx solid #ddd;
    border-bottom: 0.5rpx solid #ddd;
    background: #fff;
    padding: 0 22rpx;
}
.video_templet_list .item-price{
    margin-top: 50rpx;
    padding-bottom: 50rpx;
    border-bottom: 0.5rpx solid #ddd;
    overflow: hidden;
}
.video_list .item-price:last-child {
    border-bottom: 0 none;
}
.video_list .item-price image{
    width: 240rpx;
    height: 240rpx;
    float: left;
    margin-right: 40rpx;
}
.video_list .item-price .shop_item_right {
    float: right;
    position: relative;
    width: 425rpx;
    height: 240rpx;
}
.video_list .item-price .shop_item_right .right-title{
    font-size: 42rpx;
    color: #333;
    float: left;
    width: 100%;
    margin-bottom: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.video_list .item-price .shop_item_right .right-desc{
    font-size: 26rpx;
    color: #999;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.video_list .item-price .shop_item_right  text{
    font-size: 40rpx;
    color: #ea5c5e;
    float: left;
    position: absolute;
    left: 0;
    bottom: -10rpx;
}
.video_templet_list .detail-footer {
    font-size: 26rpx;
    color: #999;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}
.video_templet_shop {
    padding-top: 50rpx;
    padding-bottom: 160rpx;
    background: #fff;
    margin: 18rpx 0 100rpx 0;
    border-top: 0.5rpx solid #ddd;
    border-bottom: 0.5rpx solid #ddd;
}
.video_templet_shop .video_inner {
    width: 520rpx;
    margin: 0 auto;
}
.video_templet_shop .video_inner .shop_logo {
    position: relative;
    width: 130rpx;
    height: 130rpx;
    margin: 0 auto;
    margin-bottom: 38rpx;
    border: 0.5rpx solid #ddd;
    text-align: center;
}
.video_templet_shop .video_inner .shop_logo image{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
    margin: auto;
    vertical-align: middle;
}
.video_templet_shop .video_inner .shop-title {
    font-size: 36rpx;
    color: #333;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 26rpx;
}
.video_templet_shop .video_inner .shop-desc {
    font-size: 26rpx;
    color: #333;
    line-height: 1.67;
    text-align: left;
}
.video_templet_shop .video_inner .goShop {
    font-size: 28rpx;
    color: #ea5c5e;
    border: 2rpx solid #ea5c5e;
    padding: 16rpx 34rpx;
    border-radius: 60rpx; 
    display: block;
    margin: 0 auto;
    width: 180rpx;
    text-align: center;
    margin-top: 40rpx;
}
.detail_footer {
  font-size:26rpx;
  color:#999;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  padding-bottom:100rpx;

}
.goHome{
  position:fixed;
  bottom:180rpx;
  right:20rpx;
  height: 80rpx;
  width: 80rpx;
}
.goHome image{
  width: 100%;
}
.coverImg{
  position:absolute;
  width:130rpx;
  height:130rpx;
  left:50%;
  top:50%;
  transform:translate(-50%, -50%);
  -webkit-transform:translate(-50%, -50%);
}
.coverBox{
  position: relative;
  width:100%;
  height:100%;

}

