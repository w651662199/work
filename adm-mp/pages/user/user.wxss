.user{
  background: #f4f5f7;
  height: 100%;
}
.userName {
  height: 148rpx;
  border-bottom: 1rpx #efeeec solid;
  background: white;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.loginUser {
  margin-left: 20rpx;
}
.loginUser .name {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.loginUser .state {
  width: 98rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #e82c2b;
}
.state.border-1px::after {
  border-radius: 4px;
  border: 1px solid #e82c2b;
}
.loginUser .certification {
  border: 1px solid #FFA220;
  color: #FFA220;
}
.certification.border-1px::after {
  border-radius: 4px;
  border: 1px solid #e82c2b;
}
.loginUser .company {
  display: flex;
  font-size: 26rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #999999;
}
.loginUser .company image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.headerImage text {
  display: inline;
  color: #999;
  border-bottom: 1rpx solid #999;
}
.loginBtn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #e85e5e;
  color: #e85e5e;
  margin-left: 20rpx;
  border-radius: 94rpx;
}
.headerImage image {
  width:100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}
.userAccount {
  height: 160rpx;
  background: white;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx #eeeeee solid;
  align-items: center;
}
.userAccountFl{
  height: 160rpx;
}
.userAccount .profit {
  display: flex;
  align-items: center;
  padding-top: 34rpx;
  margin-left: 34rpx;
  color: #666666;
  font-size: 28rpx;
}
.userAccount .profit image {
  width: 26rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.noLogin {
  margin-top: 38rpx;
  margin-left: 34rpx;
  display: flex;
}
.LoginNumber {
  margin-left: 34rpx;
  margin-top: 12rpx;
  color: #e65051;
  font-size: 38rpx;
  font-weight: bold;
}
.noLogin text {
  width: 40rpx;
  border-top: 5rpx solid #e65051;
  display: block;
}
.noLogin text:first-child {
  margin-left: 6rpx;
  margin-right: 20rpx;
}
image.arrow{
  width:20rpx;
  height: 36rpx; 
  margin-right: 42rpx;
  margin-bottom: 8rpx;
}
.userNews {
  margin-top: 20rpx;
  background: #fff;
}
.userNews .contentItem {
  background: #fff;
  border-bottom: 1rpx solid #eeeeee;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.userNews .contentItem .arrow{
  margin-right: 41rpx;
}
.contentItem image {
  width:20rpx;
  height: 36rpx; 
  right: 41rpx;
}
.contentItem view.left{
  margin-left: 30rpx;
  font-size: 30rpx;
}
.contentItem .newsTip{
  display: inline-block;
  font-size: 28rpx;
  width:40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background: #ff2c4f;
  color: #fff;
  text-align: center;
  position: absolute;
  right: 60rpx;
  top:50%;
  margin-top:-17rpx;
}