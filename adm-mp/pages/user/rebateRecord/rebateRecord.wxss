.recordLine {
  width:100%;
  height: 1rpx;
  background: #ececec;
  position: fixed;
  top: 0;
}
.recordContent {
  padding-left: 22rpx;
}
.recordContent .contentItem {
  padding-top: 21rpx;
  padding-right: 22rpx;
  border-bottom: 1rpx solid #ececec;
}
.itemTop .topTitle {
  font-size: 30rpx;
  line-height: 48rpx;
  color: #666;
  width:480rpx;
}
.itemTop .topPrice {
  font-size: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #ff3246;
}
.itemMiddle {
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
}
.itemBottom {
  color: #ccc;
  font-size: 25rpx;
  height: 74rpx;
  line-height: 74rpx;
}
.loadingFail-content{
  height: 100%;
  background: #f2f2f2;
  padding: 0 24rpx;
}
.loadingFail-box{
  padding: 162rpx 0 0 0;
  margin: 0 auto;
  width: 100%;
  text-align: center;
}
.loadingFail-box image{
  width: 200rpx;
  height: 200rpx;
}
.loadingFail-box .title{
  font-size: 40rpx;
  color: #000;
  margin: 55rpx 0 42rpx 0;
}