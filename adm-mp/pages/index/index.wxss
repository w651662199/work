page {
  overflow: auto;
  box-sizing: border-box;
}
.index {
  background: #f2f2f2;
  overflow-x: hidden;
}
.banner {
  position: fixed;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 280rpx;
}
.banner image {
  width: 100%;
  height: 280rpx;
}
.navbar-box{
    width: 100%;
    z-index: 10;
    position: fixed;
    /* top: 280rpx; */
    top: 0;
    background-color: #fff;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    text-align: center;
    height: 80rpx;
    border-bottom: 1px solid #ddd;
    overflow: hidden;
}
.banner.hide-banner {
  display: none;
}
.navbar-box.hide-banner {
   top: 0rpx;
}
.navbar {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    font-size: 30rpx;
}
.tab {
  width: 120rpx;
  margin: 0 auto;
  line-height: 80rpx;
  color: #666;
}
.other-navigator-hover {
  background-color: none;
}
.gotTop {
  position: fixed;
  bottom: 80rpx;
  right: 22rpx;
  z-index: 10;
}
.gotTop image{
  width:82rpx;
  height: 82rpx;
}
#index-banner .swiperItem image{
  width: 100%;
  height: 376rpx;
}
#index-banner .swiper-box .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  background:rgba(0,0,0,0.2);
  position: relative;
}
#index-banner .swiper-box .wx-swiper-dot::after {
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  width: 200%;
  height: 200%;
  border: 1px solid #fff;
  transform-origin: 0 0;
  transform: scale(0.4, 0.4);
  box-sizing: border-box;
  border-radius: 50%;
}
#index-banner .swiper-box .wx-swiper-dot-active {
  width: 30rpx;
  border-radius: 60rpx;
}
#index-banner .swiper-box .wx-swiper-dot-active::after {
  border: none;
}
.nav-placeholder {
  width: 100%;
  height: 88rpx;
}
.index-nav {
  width: 100%;
  background: #fff;
  height: 88rpx;
  box-sizing: border-box;
  padding: 20rpx 0 18rpx 30rpx;
}
.index-nav.fixed {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}
.index-nav .nav-item {
  float: left;
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
  padding: 6rpx 0;
  text-align: center;
  margin-right: 20rpx;
  background: #f1f1f1;
  border-radius: 6rpx;
}
.index-nav .nav-item.selectedNav {
  color: #E82C2C;
  background: #fff;
}
.index-nav .nav-item.selectedNav.border-1px::after {
  border: 1px solid #E82C2C;
  border-radius: 6px;
}
.index-list-item {
  background: #fff;
  border-bottom: 1rpx solid #ddd;
  margin-top: 20rpx;
}
.item-three .item-three-top, .item-list .item-list-top {
  padding: 24rpx 30rpx 0 30rpx;
}
.item-three .item-three-top image, .item-list .item-list-top image{
  width: 100%;
  border-radius: 16rpx;
}
.item-three .item-three-bottom, .item-list .item-list-bottom, .item-micro .micro-have-bottom{
  padding: 22rpx 30rpx 34rpx 40rpx;
}
.item-three .item-three-bottom .title {
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.index-list-item .redpacket-top {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.index-list-item .redpacket-top image {
  width: 26rpx;
  height: 32rpx;
}
.index-list-item .redpacket-top text {
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #EA412E;
  margin-left: 10rpx;
}
.index-list-item .redpacket-bottom {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}
.item-list .item-list-top .title {
  position: absolute;
  left: 0;
  bottom: 30rpx;
  font-size: 34rpx;
  line-height: 44rpx;
  padding: 0 72rpx 0 60rpx;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-list-bottom .list-bottom-swiper {
  margin-bottom: 24rpx;
}
.item-list-bottom .list-bottom-swiper .swiperItem {
  height: 100%;
  width: 260rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.item-list-bottom .list-bottom-swiper .swiperItem:first-child {
  padding-left: 0;
}
.item-list-bottom .list-bottom-swiper .swiperItem view {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.item-list-bottom .list-bottom-swiper image {
  width: 100%;
  height: 100%;
}
.item-gome-content {
  padding: 20rpx 30rpx 30rpx 40rpx;
}
.item-gome-content .top-image image{
  border-radius: 8rpx;
}
.item-gome-content .top-image.ratio1-1 image {
  width: 160rpx;
  height: 160rpx;
}
.item-gome-content .top-image.ratio16-9 image {
  width: 214rpx;
  height: 120rpx;
}
.item-gome-content .top-title {
  color: #333;
  font-size: 34rpx;
  line-height: 48rpx;
  margin-left: 20rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-gome-content .content-bottom {
  margin-top: 20rpx;
}
.item-gome-content .bottom-from {
  font-size: 24rpx;
  color: #999999;
  height: 70rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.micro-have-top {
  padding: 24rpx 30rpx 0 30rpx;
}
.micro-have-top image {
  width: 100%;
  border-radius: 16rpx;
}
.micro-have-bottom .title{
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.micro-tags view {
  float: left;
  padding-top: 16rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999999;
  margin-right: 20rpx;
}
.micro-map {
  width: 100%;
  height: 80rpx;
  background: #F6F6F6;
  border-radius: 12rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.micro-map image{
  width: 52rpx;
  height: 52rpx;
  margin-left: 20rpx;
}
.micro-map text {
  font-size: 26rpx;
  color: #666666;
  margin-left: 20rpx;
}
.item-micro .micro-have-bottom {
  padding-bottom: 0;
}
.micro-share {
  padding: 20rpx 30rpx 30rpx 40rpx;
}
.micro-no {
  padding: 24rpx 30rpx 0 40rpx;
}
.micro-no .main-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 48rpx;
}
.micro-no .main-text-after {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  color: #315FA5;
  line-height: 46rpx;
}
.micro-no .link {
  padding-left: 40rpx;
}
.micro-no .link::after {
  position: absolute;
  top: 50%;
  left: 8rpx;
  display: block;
  width: 32rpx;
  height: 32rpx;
  content: " ";
  background: url(https://mevent.meixincdn.com/static/img/link_icon.png?v=1) no-repeat;
  background-size: 32rpx 32rpx;
  transform: translateY(-50%);
}
.link-icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.micro-no-image {
  margin-top: 16rpx;
}
.micro-no-image .one-image image{
  border-radius: 8rpx;
}
.micro-no-image .one-image.w-large image {
  width: 360rpx;
}
.micro-no-image .one-image.h-large image {
  width: 200rpx;
}
.micro-no-image .two-three-image image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}
.micro-no-image .two-three-image image:first-child {
  margin-left: 0;
}
.micro-no-image .more-image .swiperItem {
  padding-left: 16rpx;
  box-sizing: border-box;
}
.micro-no-image .more-image .swiperItem:first-child {
  padding-left: 0;
}
.micro-no-image .more-image .swiperItem image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.cover-view {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 20;
  background: rgba(0, 0, 0, 0.6);
}
.action-sheet {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 436rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.action-sheet .title {
  font-size: 40rpx;
  color: #E82C2C;
  text-align: center;
}
.action-sheet .desc {
  margin: 10rpx 0 20rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
.action-sheet button {
  width: 100%;
  height: 90rpx;
  border-radius: 90rpx;
  font-size: 32rpx;
}
.action-sheet .btn-share {
  margin: 30rpx 0;
  background: #15CF77;
  color: #fff;
}
.action-sheet .btn-share image {
  width: 51rpx;
  height: 41rpx;
}
.action-sheet .btn-cancel {
  background: #EDEDED;
  color: #333;
}
.noMoreContent {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size:26rpx;
  color:#999;
}
.index-bottom-loading {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index-bottom-loading image {
  width: 50rpx;
  height: 50rpx;
}
.share-redpacket {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.space-con {
  width: 10rpx;
}